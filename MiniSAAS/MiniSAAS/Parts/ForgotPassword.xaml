<controls:ChildWindow x:Class="MiniSAAS.Parts.ForgotPassword"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="ForgotPassword">
    <Grid x:Name="LayoutRoot" Margin="2" HorizontalAlignment="Center" VerticalAlignment="Center">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="5" Text="Email" VerticalAlignment="Center"></TextBlock>
            <TextBox x:Name="uiEmail" Margin="5" Width="100"></TextBox>
            <Button x:Name="uiSendPassword" Margin="5" Content="Send Password" Click="uiSendPassword_Click"></Button>
            <Button x:Name="uiCancel" Margin="5" Content="Cancel" Click="uiCancel_Click"></Button>
        </StackPanel>
    </Grid>
</controls:ChildWindow>